{
  "name": "data-analytics-platform",
  "version": "0.0.1",
  "description": "Data and Analytics platform which will enable the implementation of the OneLogin reporting strategy",
  "license": "MIT",
  "repository": "github:govuk-one-login/data-analytics-platform",
  "engines": {
    "node": "22"
  },
  "devDependencies": {
    "@aws-lambda-powertools/logger": "^2.22.0",
    "@aws-lambda-powertools/metrics": "^2.22.0",
    "@aws-sdk/client-athena": "^3.840.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.840.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.840.0",
    "@aws-sdk/client-eventbridge": "^3.840.0",
    "@aws-sdk/client-firehose": "^3.840.0",
    "@aws-sdk/client-lambda": "^3.840.0",
    "@aws-sdk/client-quicksight": "^3.840.0",
    "@aws-sdk/client-redshift-data": "^3.840.0",
    "@aws-sdk/client-redshift-serverless": "^3.840.0",
    "@aws-sdk/client-s3": "^3.840.0",
    "@aws-sdk/client-secrets-manager": "^3.840.0",
    "@aws-sdk/client-sfn": "^3.840.0",
    "@aws-sdk/client-sqs": "^3.840.0",
    "@aws-sdk/types": "^3.821.0",
    "@eslint/js": "^9.30.0",
    "@faker-js/faker": "^9.8.0",
    "@smithy/util-retry": "^4.0.6",
    "@swc/core": "^1.12.9",
    "@swc/jest": "^0.2.38",
    "@tsconfig/node22": "^22.0.2",
    "@types/aws-lambda": "^8.10.150",
    "@types/jest": "^30.0.0",
    "@types/tar": "^6.1.13",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "jest-junit": "^16.0.0",
    "jest-stare": "^2.5.2",
    "knex": "^3.1.0",
    "lint-staged": "^16.1.2",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.18.0",
    "tar": "^7.4.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "uuid": "^11.1.0"
  },
  "scripts": {
    "build": "scripts/build-lambdas.sh",
    "lint:check": "eslint src tests",
    "lint:fix": "eslint --fix src tests",
    "test": "jest --silent src",
    "test:coverage": "jest --coverage --silent src",
    "integration-test": "scripts/integration-test-check.sh && jest --silent ./tests/integration-tests --maxWorkers=4",
    "e2e-test": "scripts/integration-test-check.sh && jest --silent ./tests/e2e-tests --maxWorkers=4",
    "smoke-test": "scripts/integration-test-check.sh && jest ./tests/smoke-tests/smoke-tests.spec.ts --silent --maxWorkers=4",
    "prod-smoke-test": "scripts/integration-test-check.sh && jest ./tests/prod-smoke-tests/prod-smoke-tests.spec.ts --silent --maxWorkers=4",
    "regression-test": "scripts/integration-test-check.sh && jest --silent ./tests/regression-tests --maxWorkers=4",
    "integration-test-restructuring": "scripts/integration-test-check.sh && jest --silent ./tests/integration-tests-restructuring --maxWorkers=4",
    "e2e-test-restructuring": "scripts/integration-test-check.sh && jest --silent ./tests/e2e-tests-restructuring --maxWorkers=4",
    "smoke-test-restructuring": "scripts/integration-test-check.sh && jest ./tests/smoke-tests-restructuring/smoke-tests.spec.ts --silent --maxWorkers=4",
    "prod-smoke-test-restructuring": "scripts/integration-test-check.sh && jest ./tests/prod-smoke-tests-restructuring/prod-smoke-tests.spec.ts --silent --maxWorkers=4",
    "regression-test-restructuring": "scripts/integration-test-check.sh && jest --silent ./tests/regression-tests-restructuring --maxWorkers=4",
    "iac:build": "scripts/build-sam-template.sh",
    "iac:buildall": "scripts/build-sam-templates.sh",
    "iac:lint": "npm run iac:buildall && find iac-dist -maxdepth 1 -type f -print0 | xargs -0 -n1 sam validate --lint --region eu-west-2 --template-file",
    "iac:scan": "npm run iac:buildall && checkov --config-file .checkov.local.yml --directory iac-dist --quiet",
    "iac:format:check": "prettier --check iac",
    "iac:format:fix": "prettier --write iac",
    "scripts:format:check": "prettier --check scripts",
    "scripts:format:fix": "prettier --write scripts",
    "husky:install": "husky"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.{js,ts}": "eslint --fix",
    "*.py": [
      "reindent",
      "black",
      "isort",
      "pyupgrade",
      "mypy",
      "flake8",
      "pydocstyle"
    ]
  }
}
